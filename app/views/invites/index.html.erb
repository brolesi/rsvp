<h1>Listing invites</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Date</th>
    <th>Code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @invites.each do |invite| %>
  <tr>
    <td><%= invite.name %></td>
    <td><%= invite.email %></td>
    <td><%= invite.date %></td>
    <td><%= invite.code %></td>
    <td><%= link_to 'Show', invite %></td>
    <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
    <td><%= link_to 'Destroy', invite, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

