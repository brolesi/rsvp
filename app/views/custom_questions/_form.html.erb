<%= form_for(@custom_question) do |f| %>
  <% if @custom_question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@custom_question.errors.count, "error") %> prohibited this custom_question from being saved:</h2>

      <ul>
      <% @custom_question.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </div>
  <div class="field">
    <%= f.label :question_type_id %><br />
    <% #= f.text_field :question_type_id %>
    <%= f.select(:question_type_id, QuestionType.all.collect {|p| [p.friendly_name, p.question_type]}, {:include_blank => false}) %>
  </div>
  <div class="field">
    <%= f.label :sort_order %><br />
    <%= f.text_field :sort_order %>
  </div>
  <div class="field">
    <%= f.label :permission_level %><br />
    <%= f.text_field :permission_level %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
