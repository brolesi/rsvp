  </tr>

<% @basics.each do |basic| %>
  <tr>
    <td><%= basic.name %></td>
    <td><%= basic.email %></td>
    <td><%= basic.phone %></td>
    <td><%= basic.response %></td>
    <td><%= basic.guests %></td>
    <td><%= basic.children %></td>
    <td><%= link_to 'Show', basic %></td>
    <td><%= link_to 'Edit', edit_basic_path(basic) %></td>
    <td><%= link_to 'Destroy', basic, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

